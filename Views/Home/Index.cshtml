@{
    ViewBag.Title = "Contract Monthly Claim System (CMCS)";
}

<style>
    body {
        background-color: #ffffff; /* White background color */
        background-image: linear-gradient(135deg, #ffffff 0%, #ffffff 100%); /* White gradient background */
        background-attachment: fixed;
        background-size: cover;
        color: #000000; /* Black font color */
    }
</style>


<div class="jumbotron text-center">
    <!-- Title of the System -->
    <h1 style="font-size: 3.5em; font-weight: bold;">Contract Monthly Claim System (CMCS)</h1>

    <!-- Get Started Button -->
    <p>
        <a href="/Account/Login" class="btn btn-primary btn-lg mt-4">Welcome</a>
    </p>
</div>

<!-- Footer -->
<footer class="text-center" style="position: absolute; bottom: 0; width: 100%; padding: 20px; background-color: transparent;">
    <p>&copy; @DateTime.Now.Year - CMCS All Rights Reserved</p>
</footer>
